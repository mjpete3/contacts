<h1>List Types of Contact</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Description</th>
    <th></th>
	<th></th>
  </tr>

<% @contacttypes.each do |contacttype| %>
  <tr>
    <td><%= contacttype.type_ident %></td>
    <td><%= contacttype.type_name %></td>
    <td><%= link_to 'Edit', edit_contacttype_path(contacttype) %></td>
    <td><%= link_to 'Delete', contacttype, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

