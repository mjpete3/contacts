<%= page_title "Contacts" %>
<%= render 'submenu'%>
<div class= 'sidebar'>
	<%= link_to "Add Contact", new_person_path %>
</div>

<table>
	<tr>
		<th>Contact Name</th>    
    	<th></th>
    	<th></th>
	</tr>

	<% @people.each do |person| %>
  		<tr>
    		<td><%= link_to "#{person.last_name}, #{person.first_name}", person %></td>
		    <td><%= link_to "Edit", edit_person_path(person) %></td>
    		<td><%= link_to "Delete", person, :confirm => "Are you sure?", :method => :delete %></td>
  		</tr>
	<% end %>
</table>

<br />


